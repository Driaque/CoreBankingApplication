@model Core.EOD
@{
    ViewBag.Title = "Business";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "CloseBusiness";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CloseBusiness</h2>


@using (Html.BeginForm("CloseBusiness", "EOD", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>Current Financial Date @ViewBag.CurrentFinancialDate</p>
        @{
            <div>
                <input type="submit" value="Close Business" />
            </div>
        }

    </div>
            }